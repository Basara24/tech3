create table cena (
    id_cena int primary key not null,
    descricao varchar(655)
);
create table item (
    id_item int primary key not null,
    nome varchar(50) not null,
    utilize varchar(150),
    id_proxima_cena int not null,
    id_cena int,
    foreign key (id_cena) references cena(id_cena)
);
create table use_with(
    id_cena int,
    id_item int,
    foreign key (id_cena) references cena(id_cena),
    foreign key (id_item) references item(id_item)
);
create table saves (
	id_seve int primary key auto_increment,
	id_cena_atual int not null,
	foreign key (id_cena_atual)
);

